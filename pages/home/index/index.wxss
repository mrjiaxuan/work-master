@keyframes hover {
  from {
    transform: scale(1);
  }

  to {
    transform: scale(0.97);
  }
}

.box4 {
  position: absolute;
  top: 300rpx;
  height: 700rpx;
  width: 600rpx;
  background-color: #ffffff;
  border-radius: 5rpx;
  right: 750rpx;
}

.qrcode_show {
  animation: move_in 0.4s linear 1;
  opacity: 1;
  right: 75rpx;
}

.qrcode_hide {
  animation: move_out 0.4s linear 1;
  opacity: 0;
  right: 750rpx;
}

@keyframes move_in {
  from {
    opacity: 0;
    right: 750rpx;
  }

  to {
    opacity: 1;
    right: 75rpx;
  }
}

@keyframes move_out {
  from {
    opacity: 1;
    right: 75rpx;
  }

  to {
    opacity: 0;
    right: 750rpx;
  }
}

@keyframes wind {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(-2880deg);
  }
}

